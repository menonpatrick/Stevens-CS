<link rel="stylesheet" href="/assets/css/user/auth.css">
<script src="/assets/js/user/auth.js"></script>
<script src="/assets/js/user/sign-up-form.js"></script>

<div class="container">
    <div class="row">
        <div id="sign-up" class="col-sm-6 offset-3">
            <h1>Create an Account</h1>
            <form id="signup-form">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" class="form-control" name="username" placeholder="Enter username" type="text" maxlength="10">
                </div>
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input id="email" class="form-control" name="email" placeholder="Enter email id" type="email" >
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter password" name="password" maxlength="8">
                </div>
                <div class="form-group">
                    <label for="confirm-password">Comfirm Password</label>
                    <input type="password" class="form-control" id="confirm-password" placeholder=" Confirm Password" name="confirm-password" maxlength="8">
                </div>
                <button id="signup-btn" type="button" class="btn btn-primary" onclick="validateSignUpForm()">Create Account</button>
                <button type="button" class="btn btn-primary" onclick="redirectToLogin()">Login</button>
            </form>
            <div id="alert" class="alert" role="alert"></div>
        </div>
    </div>
</div>
